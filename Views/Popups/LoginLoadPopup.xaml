<UserControl xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"  
             x:Class="NovaLauncher.Views.Popups.LoginLoadPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             Background="{x:Null}"
             mc:Ignorable="d" 
             d:DesignHeight="598.04" d:DesignWidth="987" Loaded="UserControl_Loaded">
    <Grid>
        <materialDesign:Card BorderThickness="0" UniformCornerRadius="0" materialDesign:ElevationAssist.Elevation="Dp0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="221" Height="190" Background="#FF282828">
            <Grid>
                <TextBlock x:Name="SeasonName" FontSize="16" Text="Logging In..." Foreground="#FFDEDEDE" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,18,0,0"/>
                <ProgressBar IsIndeterminate="True" Style="{StaticResource MaterialDesignCircularProgressBar}" Value="0" Width="80" Height="80" BorderThickness="3,3,3,3" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,24,0,0" LargeChange="0"/>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
