<UserControl xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"  
             x:Class="NovaLauncher.Views.Controls.NewBuildAddingPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             Background="{x:Null}"
             mc:Ignorable="d" 
             d:DesignHeight="598.04" d:DesignWidth="987">
    <Grid>
        <materialDesign:Card x:Name="AddingBuildCard" BorderThickness="0" UniformCornerRadius="0" materialDesign:ElevationAssist.Elevation="Dp0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="221" Height="190" Background="#FF282828" Loaded="Start">
            <Grid>
                <TextBlock x:Name="StatusPage" FontSize="16" Text="Adding Build..." Foreground="#FFDEDEDE" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,27"/>
                <ProgressBar IsIndeterminate="True" Style="{StaticResource MaterialDesignCircularProgressBar}" Value="0" Width="80" Height="80" BorderThickness="3,3,3,3" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" LargeChange="0" Margin="0,30,0,0"/>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
